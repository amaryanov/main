keepalive_timeout    70;
ssl_certificate      cert/ssl.crt;
ssl_certificate_key  cert/ssl.key;
ssl                  on;
ssl_protocols        SSLv3 TLSv1;
ssl_ciphers          AES128-SHA:AES256-SHA:RC4-SHA:DES-CBC3-SHA:RC4-MD5;
ssl_session_cache    shared:SSL:10m;
ssl_session_timeout  10m;
include sites/common/.common;
if ($host = $admin_host)
{
	rewrite ^/(?!((index.php/)?(admin|skin|js|minify))) http://$host permanent;
}
if ($host != $admin_host)
{
	rewrite .* http://$host permanent;
}
location ~ ^/(index.php/)?admin { #admin
	allow 127.0.0.4;
	allow 193.46.86.225;
	allow 91.210.189.17;
	allow 91.210.189.50;
	allow 95.111.128.0/17;
	allow 93.180.192.0/18;
	deny all;
	error_page 404 = @allow_control;
}
location @allow_control {
	rewrite .* /index.php last;
}
location ~ \.php$ {
	fastcgi_param HTTPS on;
	include sites/common/php;
}
